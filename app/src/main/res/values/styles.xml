<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:homeAsUpIndicator">@mipmap/ic_upnav</item>
        

    </style>
    

    <style name="Rating_bar" parent="Theme.AppCompat">
        <item name="android:progressDrawable">@mipmap/ic_rating</item>
        <item name="android:indeterminateDrawable">@mipmap/ic_rating</item>
        <item name="android:colorControlNormal">@color/colorRating</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>

    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
