<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.concussionapp.MainActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />


    <Button
        android:id="@+id/showSecondActivity"
        android:layout_width="275dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="42dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="to_home_activity"
        android:text="Sign In"
        android:textColor="@color/colorAccent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="139dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar" />

    <Button
        android:id="@+id/toQuickstart"
        android:layout_width="272dp"
        android:layout_height="44dp"
        android:layout_above="@+id/showSecondActivity"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="44dp"
        android:layout_marginTop="75dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="to_quickstart"
        android:text="QUICKSTART"
        android:textColor="@color/colorAccent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar" />

    <Button
        android:layout_width="278dp"
        android:layout_height="48dp"
        android:text="Sign Up"
        android:id="@+id/ButtonSignUp"
        android:onClick="to_signup_activity"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="203dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginRight="41dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="363dp"
        android:layout_height="317dp"
        app:srcCompat="@drawable/blackburgundy"
        android:layout_marginTop="270dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginRight="-2dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
