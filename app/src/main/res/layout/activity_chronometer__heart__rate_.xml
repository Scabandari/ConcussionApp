<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="4dip"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <Chronometer android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingBottom="30dp"
        android:paddingTop="30dip"
        />

    <Button android:id="@+id/start_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startChronometer"
        android:background="@color/colorPrimaryDark">
        <requestFocus />
    </Button>

    <Button android:id="@+id/stop_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stopChronometer"
        android:background="@color/colorPrimaryDark">
    </Button>

    <Button android:id="@+id/reset_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resetChronometer"
        android:background="@color/colorPrimaryDark"
        android:paddingBottom="30dp">
    </Button>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Rate"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="---"
        android:id="@+id/heart_rate_values"/>

</LinearLayout>