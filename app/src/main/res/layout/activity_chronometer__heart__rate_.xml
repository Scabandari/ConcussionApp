<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:padding="4dip"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:weightSum="1">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginRight="80dp"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center" />

    <Button
        android:id="@+id/start_Button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_weight="0.05"
        android:background="@drawable/my_shape2"
        android:text="@string/startChronometer"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginRight="80dp"
        app:layout_constraintRight_toRightOf="parent">

        <requestFocus />
    </Button>

    <Button
        android:id="@+id/stop_Button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/stopChronometer"
        android:background="@drawable/my_shape2"
        android:textColor="@color/colorAccent"
        android:elevation="5dp"
        android:layout_weight="0.06"
        android:layout_marginTop="170dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginRight="80dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/reset_Button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/resetChronometer"
        android:background="@drawable/my_shape"
        android:textColor="@color/colorAccent"
        android:layout_weight="0.04"
        android:layout_marginTop="220dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginRight="80dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Connect"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Connect"
        android:background="@drawable/my_shape"
        android:textColor="@color/colorAccent"
        android:layout_weight="0.05"
        android:layout_marginTop="378dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginRight="80dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/connectionStatus"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:layout_weight="0.07"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginRight="144dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Disconnect"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Disconnect"
        android:background="@drawable/my_shape"
        android:textColor="@color/colorAccent"
        android:layout_weight="0.06"
        android:layout_marginTop="441dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginRight="80dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/ActualHeartRate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_weight="0.13"
        android:editable="false"
        android:background="@color/colorPrimaryDark"
        android:text="--"
        android:textSize="40sp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="301dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginRight="80dp"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"/>

</android.support.constraint.ConstraintLayout>