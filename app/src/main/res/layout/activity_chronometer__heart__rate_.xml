<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="4dip"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:weightSum="1">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <Chronometer android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textColor="@color/colorAccent"
        android:paddingBottom="30dip"
        android:paddingTop="30dip"
        />

    <Button
        android:id="@+id/start_Button"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.05"
        android:background="@color/colorPrimaryDark"
        android:text="@string/startChronometer"
        android:textColor="@color/colorAccent">

        <requestFocus />
    </Button>

    <Button android:id="@+id/stop_Button"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:text="@string/stopChronometer"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:elevation="5dp"
        android:layout_weight="0.06"
        android:layout_marginBottom="20dp">
    </Button>

    <Button android:id="@+id/reset_Button"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:text="@string/resetChronometer"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:layout_weight="0.04"
        android:layout_marginBottom="20dp">
    </Button>

    <Button
        android:id="@+id/Connect"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:layout_weight="0.05"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:id="@+id/connectionStatus"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:layout_weight="0.07"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/Disconnect"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:layout_weight="0.06"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/ActualHeartRate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.13"
        android:background="@color/colorPrimaryDark"
        android:text="@string/resetChronometer"
        android:textColor="@color/colorAccent" />

    <TextView
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:text="Heart Rate: "
        android:layout_weight="0.07" />



</LinearLayout>