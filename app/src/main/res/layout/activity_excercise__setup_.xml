<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRed">
    >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/MaxEditText"
        android:layout_marginLeft="85dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="47dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignEnd="@+id/MaxEditText"
        android:id="@+id/MinEditText"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/MinMessage"
        android:layout_marginLeft="85dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="Exercise Duration (Minutes):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TimeMessage"
        android:layout_below="@+id/MinEditText"
        android:layout_alignStart="@+id/MinEditText"
        android:textSize="18sp"
        android:layout_marginLeft="85dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/MinEditText" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignEnd="@+id/MaxEditText"
        android:id="@+id/exercise_duration"
        android:layout_marginLeft="85dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/TimeMessage" />

<!--
    <Spinner
        android:id="@+id/TimeSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimeMessage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="27dp" />
-->

    <TextView
        android:text="Max Heart Rate:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MaxMessage"
        android:textSize="18sp"
        android:layout_alignStart="@+id/TimeSpinner"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/MaxEditText"
        android:layout_marginLeft="128dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DoneSetupButton"
        android:textSize="18sp"
        android:background="@color/colorRed"
        android:layout_marginLeft="148dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="26dp" />

    <TextView
        android:text="Min Heart Rate:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MinMessage"
        android:textSize="18sp"
        android:layout_marginLeft="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/MaxEditText" />

</android.support.constraint.ConstraintLayout>