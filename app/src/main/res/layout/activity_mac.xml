<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.concussionapp.MACActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/msg"
        android:text="If you're having trouble connecting to the sensor check that you're sensor's correct MAC address is below:"
        android:background="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="8dp"
        tools:layout_editor_absoluteY="63dp"
        tools:layout_editor_absoluteX="8dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setupMac"
        android:text="MAC address: "
        android:background="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent"
        android:textSize="20sp"

        tools:layout_editor_absoluteY="153dp"
        tools:layout_editor_absoluteX="8dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MAC1"
        android:background="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent"
        android:textSize="20sp"
        android:hint="XX:XX:XX:XX:XX:XX"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="153dp"
        android:layout_marginRight="53dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/secondMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="256dp" />


</android.support.constraint.ConstraintLayout>
