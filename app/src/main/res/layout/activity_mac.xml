<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.concussionapp.MACActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:id="@+id/msg"
        android:text="If you're having trouble connecting to the sensor check that you're sensor's correct MAC address is below:"
        android:background="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setupMac"
        android:text="MAC address: "
        android:background="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent"
        android:textSize="20sp"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="153dp"
        android:layout_marginRight="214dp"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MAC"
        android:background="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent"
        android:textSize="20sp"
        android:hint="XX:XX:XX:XX:XX:XX"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="153dp"
        android:layout_marginLeft="189dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/secondMessage"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="If this is incorrect you can enter your sensor's MAC address below in the format XX:XX:XX:XX:XX:XX. You may save this new MAC address and or set it as the default"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="192dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="9dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/inputMAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="210dp"
        android:layout_marginLeft="29dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/firstET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:maxLength="2"
        android:hint="XX"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="323dp"
        android:layout_marginRight="236dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/secondET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:maxLength="2"
        android:hint="XX"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="323dp"
        app:layout_constraintLeft_toRightOf="@+id/firstET"
        android:layout_marginLeft="8dp" />

    <EditText
        android:id="@+id/thirdET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:maxLength="2"
        android:hint="XX"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="323dp"
        app:layout_constraintLeft_toRightOf="@+id/secondET"
        android:layout_marginLeft="8dp" />

    <EditText
        android:id="@+id/fourthET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:maxLength="2"
        android:hint="XX"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="323dp"
        app:layout_constraintLeft_toRightOf="@+id/thirdET"
        android:layout_marginLeft="8dp" />

    <EditText
        android:id="@+id/fifthET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:maxLength="2"
        android:hint="XX"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="323dp"
        app:layout_constraintLeft_toRightOf="@+id/fourthET"
        android:layout_marginLeft="8dp" />

    <EditText
        android:id="@+id/sixthET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:maxLength="2"
        android:hint="XX"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="323dp"
        app:layout_constraintLeft_toRightOf="@+id/fifthET"
        android:layout_marginLeft="8dp" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="saveButton"
        android:background="@drawable/my_shape3"
        android:layout_marginRight="148dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp" />

    <Button
        android:id="@+id/buttonDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:background="@drawable/my_shape3"
        android:onClick="doneButton"
        android:layout_marginRight="148dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="27dp" />

</android.support.constraint.ConstraintLayout>
