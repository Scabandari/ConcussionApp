<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recovery_tracking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.concussionapp.RecoveryTrackingActivity">

    <Button
        android:text="Button"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:id="@+id/done_button"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:text="Step 2"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:id="@+id/Check_Step2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Check_Step1"
        android:layout_marginEnd="112dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorAccent" />

    <CheckBox
        android:text="Step 3"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:id="@+id/Check_Step3"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/Check_Step2"
        android:layout_marginEnd="112dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorAccent" />

    <CheckBox
        android:text="Step 4"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:id="@+id/Check_Step4"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Check_Step3"
        android:layout_marginEnd="112dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorAccent" />

    <CheckBox
        android:text="Step 5"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:id="@+id/Check_Step5"
        tools:layout_editor_absoluteX="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/Check_Step4"
        android:textColor="@color/colorAccent" />

    <CheckBox
        android:text="Step 6 "
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:id="@+id/Check_Step6"
        tools:layout_editor_absoluteX="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Check_Step5"
        app:layout_constraintBottom_toTopOf="@+id/done_button"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.060000002"
        android:textColor="@color/colorAccent" />

    <CheckBox
        android:text="Step 1"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:id="@+id/Check_Step1"
        tools:layout_editor_absoluteY="111dp"
        tools:layout_editor_absoluteX="18dp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:text="As of today, I have completed the following steps "
        android:layout_width="324dp"
        android:layout_height="43dp"
        android:id="@+id/textView2"
        app:layout_constraintBottom_toTopOf="@+id/Check_Step1"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
