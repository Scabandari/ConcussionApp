<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questionaire"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.concussionapp.Questionaire"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:text="Pre Workout Questionaire"
        android:layout_width="352dp"
        android:layout_height="16dp"
        android:id="@+id/preworkoutquestionaire"
        android:textStyle="normal|bold"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:text="Headache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/headache"
        android:textStyle="normal|bold"
        tools:layout_editor_absoluteY="366dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp" />

    <TextView
        android:text="How do you fell ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimary"
        tools:layout_editor_absoluteY="195dp"
        tools:layout_editor_absoluteX="5dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

    <TextView
        android:text="Symptom Evaluation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimary"
        tools:layout_editor_absoluteY="78dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_below="@+id/preworkoutquestionaire"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimary"
        android:text='"Based on how you feel now score yourself from 0 to 6 on the following symtomb" 0 being none and 6 severe.'
        android:textSize="10sp"
        tools:layout_editor_absoluteY="285dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimary"
        android:hint="Enter score between 0 and 6"
        android:textSize="9sp"
        android:layout_alignBottom="@+id/headache"
        android:layout_toEndOf="@+id/textView3" />


</RelativeLayout>
