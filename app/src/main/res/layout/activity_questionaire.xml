<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_questionaire"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.concussionapp.Questionaire">


    <RatingBar
        android:id="@+id/ratingBar5"
        android:layout_width="208dp"
        android:layout_height="57dp"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="195dp" />

    <RatingBar
        android:id="@+id/ratingBar4"
        android:layout_width="208dp"
        android:layout_height="57dp"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="292dp" />

    <Button
        android:id="@+id/submitquiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="490dp"
        tools:layout_editor_absoluteX="135dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Pre Workout Survey"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        tools:layout_editor_absoluteY="2dp"
        tools:layout_editor_absoluteX="91dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="Symptom Evaluation"
        android:textSize="18sp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteY="49dp"
        tools:layout_editor_absoluteX="-1dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:text="Please score yourself on each symptom based on how you feel now, 0 being none and 5 severe."
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="91dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"

        android:text="Headache"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="154dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dizziness"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="259dp" />

    <ScrollView
        android:layout_width="365dp"
        android:layout_height="405dp"
        tools:layout_editor_absoluteX="-8dp"
        tools:layout_editor_absoluteY="140dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>


</android.support.constraint.ConstraintLayout>